<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
    <Button android:layout_width="wrap_content" android:text="More" android:layout_height="wrap_content" android:id="@+id/more"></Button>
    <Button android:text="Less" android:layout_height="wrap_content" android:id="@+id/less" android:layout_width="wrap_content"></Button>
    <CheckBox android:text="Show FPS" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/showFPS"></CheckBox>
</LinearLayout>
